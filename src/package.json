  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.json && vite build",
    "build:lib": "tsc --project tsconfig.json && vite build --config vite.config.lib.ts",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check:circular": "madge --circular --extensions ts,tsx --no-spinner components/",
    "check:boundary": "node scripts/check-boundary.js",
    "check:exports": "node scripts/check-exports.js",
    "check:setup": "node scripts/verify-setup.cjs",
    "validate": "npm run typecheck && npm run test && npm run build:lib && npm run check:circular && npm run check:boundary && npm run check:exports",
    "release": "npm run validate && npm version patch && git push --follow-tags",
    "release:minor": "npm run validate && npm version minor && git push --follow-tags",
    "release:major": "npm run validate && npm version major && git push --follow-tags",
    "prepublishOnly": "npm run validate",
    "lockfile": "npm install --package-lock-only",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  }