  "_shadows": {
    "_note": "Figma Effect Styles (NOT variables). Create these as Effect Styles manually in Figma.",
    "Elevation/1": {
      "cssVar": "--shadow-elevation-1",
      "light": "0 1px 2px 0 rgba(28, 45, 58, 0.05)",
      "dark": "0 1px 2px 0 rgba(0, 0, 0, 0.3)",
      "usage": "Buttons at rest, inputs, subtle depth"
    },
    "Elevation/2": {
      "cssVar": "--shadow-elevation-2",
      "light": "0 4px 6px -1px rgba(28, 45, 58, 0.1), 0 2px 4px -2px rgba(28, 45, 58, 0.1)",
      "dark": "0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -2px rgba(0, 0, 0, 0.3)",
      "usage": "Cards, tables, dropdowns"
    },
    "Elevation/3": {
      "cssVar": "--shadow-elevation-3",
      "light": "0 10px 15px -3px rgba(28, 45, 58, 0.1), 0 4px 6px -4px rgba(28, 45, 58, 0.1)",
      "dark": "0 10px 15px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -4px rgba(0, 0, 0, 0.3)",
      "usage": "Hover cards, tooltips, popovers"
    },
    "Elevation/4": {
      "cssVar": "--shadow-elevation-4",
      "light": "0 20px 25px -5px rgba(28, 45, 58, 0.1), 0 8px 10px -6px rgba(28, 45, 58, 0.1)",
      "dark": "0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 8px 10px -6px rgba(0, 0, 0, 0.3)",
      "usage": "Modals, sheets, sidebars, drawers"
    }
  },

