          "type": "COLOR",
          "description": "--primary: Green CTA, actions, focus ring",
          "cssVar": "--primary",
          "tailwind": "bg-primary / text-primary",
          "aliasLight": "Primitives/Green/500",
          "aliasDark": "Primitives/Green/500",
