    {
      "name": "3. Component",
      "description": "Component-level tokens: border radius and shadow definitions. Radius values are FLOAT (pixels). Shadows are STRING (CSS syntax for reference).",
      "modes": ["Value"],
      "variables": [
        {
          "name": "Radius/sm",
          "type": "FLOAT",
          "description": "calc(--radius - 4px) = 6px. Badges, small inputs.",
          "cssVar": "--radius-sm",
          "tailwind": "rounded-sm",
          "values": { "Value": 6 }
        },
        {
          "name": "Radius/md",
          "type": "FLOAT",
          "description": "calc(--radius - 2px) = 8px. Inputs, badges.",
          "cssVar": "--radius-md",
          "tailwind": "rounded-md",
          "values": { "Value": 8 }
        },
        {
          "name": "Radius/lg",
          "type": "FLOAT",
          "description": "Base radius = 10px. Buttons.",
          "cssVar": "--radius",
          "tailwind": "rounded-lg",
          "values": { "Value": 10 }
        },
        {
          "name": "Radius/xl",
          "type": "FLOAT",
          "description": "calc(--radius + 4px) = 14px. Cards, modals, dialogs.",
          "cssVar": "--radius-xl",
          "tailwind": "rounded-xl",
          "values": { "Value": 14 }
        },
        {
          "name": "Radius/full",
          "type": "FLOAT",
          "description": "9999px. Pills, circular avatars.",
          "tailwind": "rounded-full",
          "values": { "Value": 9999 }
        }
      ]
    }
