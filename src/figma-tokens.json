  },

  "_componentRadiusMap": {
    "_note": "Quick reference: which radius token each component uses in code.",
    "Button":            { "radius": "lg (10px)", "tailwind": "rounded-lg" },
    "Input":             { "radius": "md (8px)",  "tailwind": "rounded-md" },
    "Badge":             { "radius": "md (8px)",  "tailwind": "rounded-md" },
    "Card":              { "radius": "xl (14px)", "tailwind": "rounded-xl" },
